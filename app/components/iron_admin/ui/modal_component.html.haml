%div{ class: "fixed inset-0 z-50 overflow-y-auto", data: { controller: "modal" }, role: "dialog", aria: { modal: true } }
  .flex.min-h-full.items-center.justify-center.p-4
    -# Backdrop
    .fixed.inset-0.bg-gray-500.bg-opacity-75.transition-opacity{ data: dismissible ? { action: "click->modal#close" } : {} }

    -# Modal panel
    %div{ class: modal_classes }
      -# Header
      - if title? || dismissible
        .flex.items-center.justify-between.px-6.py-4.border-b{ class: theme.card_border }
          - if title?
            %h3.text-lg.font-semibold{ class: theme.body_text }
              = title
          - if dismissible
            %button.text-gray-400.hover:text-gray-500.transition-colors{ type: "button", data: { action: "modal#close" } }
              = heroicon "x-mark", variant: :outline, options: { class: "h-6 w-6" }

      -# Content
      .px-6.py-4
        = content

      -# Footer
      - if footer?
        .flex.items-center.justify-end.gap-3.px-6.py-4.border-t{ class: theme.card_border }
          = footer
